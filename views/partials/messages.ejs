<% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(error) { %>
        <div class="error"></div><%= error.msg %></div>
   <% }); %>
<% } %>

<% if(success_msg != '') { %>
    <div class="success"></div><%= success_msg %></div>
<% } %>

<% if(error_msg != '') { %>
    <div class="error_msg"></div><%= error_msg %></div>
<% } %>

<% if(error != '') { %>
    <div class="error"></div><%= error %></div>
<% } %>